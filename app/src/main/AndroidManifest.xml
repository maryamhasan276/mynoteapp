<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tecra.cloverly">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_leaf_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_leaf_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:name=".APP">

        <activity android:name=".screens.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.SignUpActivity"/>
        <activity android:name=".screens.Audio_Editor" />
        <activity android:name=".screens.Note_Editor" />
        <activity android:name=".screens.MainActivity"/>
        <activity android:name=".screens.EditProfileActivity"/>
        <activity android:name=".screens.BaseActivity"/>
        </application>

    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
    </manifest>

